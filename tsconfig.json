{
  "compileOnSave": true,
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "downlevelIteration": true,
    "target": "esnext",
    "importHelpers": true,
    "module": "umd",
    "allowUmdGlobalAccess": true,
    "noEmitHelpers": true,
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "exclude": [
    "**/dist/**/*.ts"
  ]
}
