{
  "compileOnSave": true,
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "baseUrl": "./",
    "outFile": "static/client.js",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "downlevelIteration": true,
    "target": "esnext",
    "importHelpers": true,
    "module": "amd",
    "allowUmdGlobalAccess": true,
    "noEmitHelpers": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "exclude": [
    "**/dist/**/*.ts"
  ],
  "files": [
    "client/client.ts"
  ]
}
